<% if !applications.empty? && comments.empty? %>
<%= pluralize(applications.count, "new planning application") %> near <%= alert.address %>
<% elsif applications.empty? && !comments.empty? %>
<%= pluralize(comments.count, "new comment") %> on planning applications near <%= alert.address %>
<% elsif !applications.empty? && !comments.empty? %>
<%= pluralize(comments.count, "new comment") %> and <%= pluralize(applications.count, "new planning application") %> near <%= alert.address %>
<% end %>