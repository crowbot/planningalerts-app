- content_for :page_title, "Browse planning applications by authority"
%h3= yield :page_title

%table.authorities
  - @authorities.each do |authority|
    %tr
      %td.name
        = link_to authority.full_name, authority_url(authority.short_name_encoded)
      %td.total_applications
        = authority.stats.overview.total
        applications
      %td.percent_approved
        ="#{authority.stats.overview.percentage_approved}% approved"
      %td.percent_delayed
        ="#{authority.stats.overview.percentage_delayed}% delayed"

