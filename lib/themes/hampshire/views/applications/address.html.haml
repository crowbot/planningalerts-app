- content_for :page_title, @description

= render "address_search_preamble"

%form.address-search.formtastic.one-field{'accept-charset' => "UTF-8", 'action' => address_applications_path, 'method' => "post"}
  %fieldset.inputs
    %ol
      %li#s_input.string
        = label_tag(:search, "Show applications for:")
        = text_field_tag(:search, (params[:search] or "anything"), :placeholder => "e.g. Conservatories")
      %li#q_input.string{:class => ("error" if @error)}
        = label_tag(:location, "Located around:")
        = text_field_tag(:location, params[:location], placeholder: "e.g. SO23 8UJ or Romsey Rd, Winchester")
        = link_to "#", class: "inline-hints", id: "geolocate" do
          &hellip; or locate me automatically
        - if @error
          %p.inline-errors= @error
  %fieldset.actions
    %ol
      %li.submit= submit_tag "Search", :name => nil, :class => "button button-rounded button-large button-action"

- if @applications
  = paginated_section @applications, :previous_label => "« Newer", :next_label => "Older »" do
    = render "applications", :applications => @applications
